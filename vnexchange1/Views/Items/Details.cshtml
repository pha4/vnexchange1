<script>
    function thumbnailImage_Click(obj, src) {
        $(".thumbnail-active").removeClass("thumbnail-active");
        $(obj).addClass("thumbnail-active");
        $(".main-imgage:visible").attr("src", "/uploads/" + src);
    }
</script>

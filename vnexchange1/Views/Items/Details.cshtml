                    <p>
                        <strong>Ghi chú:</strong> @Html.DisplayFor(model => model.ItemDescription)...
                        <a href="#">Xem thêm</a>
                    </p>
                    <p><strong>Tôi muốn:</strong></p>
                    <p>
                        @if (Model.ItemType == 1)
                        {
                            if (Model.CanTrade)
                            {
                                <a href="#" class="btn btn-success" role="button" data-toggle="modal" data-target="#myModalMua">Mua</a>
                            }
